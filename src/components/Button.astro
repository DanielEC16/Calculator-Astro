---


interface Props {
  contenido: string;
  color: string;
  area: string;
}


const { contenido, color, area } = Astro.props;
---

<button style={`grid-area: ${area};`} class={color}>{contenido}</button>

<style>
  button {
    width: auto;
    height: auto;
    color: white;
    padding: 1.5rem 1.8rem;
    font-size: 1rem;
    font-weight: 300;
    border: none;
    border-radius: 15px;
    transition: all 0.3s ease-in-out;
  }
  .violet {
    background-color: #06071c;
  }
  .blue {
    background-color: #5c2323;
    border-radius: 8px;
  }
  button:hover {
    filter: brightness(200%);
  }
</style>

